<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.fangjingdong.view.activity.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame"
        android:layout_above="@+id/view_line"></FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:id="@+id/view_line"
        android:layout_above="@+id/radio_group"
        android:background="#66000000"></View>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radio_group"
        android:layout_alignParentBottom="true">
        <RadioButton
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/radio_shouye"
            android:layout_weight="1"
            android:checked="true"
        android:background="@drawable/shouye"
        android:button="@null"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/radio_fenlei"
            android:layout_weight="1"
            android:background="@drawable/fenlei"
            android:button="@null"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/radio_faxian"
            android:layout_weight="1"
            android:background="@drawable/faxian"
            android:button="@null"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/radio_cart"
            android:layout_weight="1"
            android:background="@drawable/cart"
            android:button="@null"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/radio_my"
            android:layout_weight="1"
            android:background="@drawable/my"
            android:button="@null"
            />
    </RadioGroup>

</RelativeLayout>
